<Window x:Class="Warehouse_operationsAPPWPF.Pages.ReceiptExpenseDocumentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
        mc:Ignorable="d"
        Title="ReceiptExpenseDocumentDetailsWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Детали документа"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Список -->
        <ListView Name="DocumentDetailsListView" Grid.Row="1" Margin="0,0,0,20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="60" DisplayMemberBinding="{Binding id_inf_doc}" />
                    <GridViewColumn Header="Продукт" Width="140" DisplayMemberBinding="{Binding ProductName}" />
                    <GridViewColumn Header="Количество" Width="100" DisplayMemberBinding="{Binding Quanity}" />
                    <GridViewColumn Header="Поставщик" Width="140" DisplayMemberBinding="{Binding SuppliersName}" />
                    <GridViewColumn Header="Стоимость ₽" Width="130" DisplayMemberBinding="{Binding Cost}" />
                    <GridViewColumn Header="Цена ₽" Width="130" DisplayMemberBinding="{Binding Price}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопка -->
        <Button Content="Закрыть"
                Grid.Row="2"
                Width="100" Height="35"
                HorizontalAlignment="Center"
                Click="Close_Click"/>
    </Grid>
</Window>