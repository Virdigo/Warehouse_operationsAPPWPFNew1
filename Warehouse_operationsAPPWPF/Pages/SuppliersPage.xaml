<Page x:Class="Warehouse_operationsAPPWPF.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1250"
      Title="SuppliersPage" Background="#3b5998">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Name="BtnArrowLeft" Width="50" Height="50" Click="BtnArrowLeft_Click" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/ArrowLeft.png" Stretch="Fill"/>
            </Button>
            <Button Name="BtnArrowRight" Width="50" Height="50" Click="BtnArrowRight_Click" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/ArrowRight.png" Stretch="Fill"/>
            </Button>
        </StackPanel>

        <Border Background="White" CornerRadius="10" Padding="0" Grid.Row="1">
            <StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Label Content="Фильтр по наименованию" FontSize="28" FontWeight="Bold" />
                    <TextBox Name="NameFilterTextBox" Width="200" Margin="5,0"/>
                    <Button Content="Выполнить" Click="FilterButton_Click" Margin="5,0" Background="#3b5998" Foreground="White" Width="120" Height="50"/>
                </StackPanel>

                <ListView Name="SuppliersListView" Height="300" Margin="0,10,0,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding id_suppliers}" Width="70"/>
                            <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding Name}" Width="200"/>
                            <GridViewColumn Header="Контактная информация" DisplayMemberBinding="{Binding Contact_Information}" Width="300"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Добавить поставщика" Click="AddSupplierButton_Click" Background="#3b5998" Foreground="White" Width="220" Margin="5,0"/>
                    <Button Content="Редактировать поставщика" Click="EditSupplierButton_Click" Background="#3b5998" Foreground="White" Width="270" Margin="5,0"/>
                    <Button Content="Удалить поставщика" Click="DeleteSupplierButton_Click" Background="#D9534F" Foreground="White" Width="200" Margin="5,0"/>
                    <Button Content="Обновить страницу" Click="LoadSuppliers_Click" Background="#5BC0DE" Foreground="White" Width="200" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

</Page>