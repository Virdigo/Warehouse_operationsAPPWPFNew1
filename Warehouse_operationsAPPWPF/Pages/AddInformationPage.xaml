<Page x:Class="Warehouse_operationsAPPWPF.Pages.AddInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Warehouse_operationsAPPWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="AddInformationPage" Background="#3b5998">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="10" Padding="20" Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Данные продукта" FontSize="18" FontWeight="Bold" Foreground="#3b5998"/>
            </StackPanel>
        </Border>

        <Border Background="White" CornerRadius="10" Padding="20" Grid.Row="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ID продукта:" FontSize="14" Foreground="#3b5998" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="ProductIdTextBox" Grid.Row="0" Grid.Column="1" Width="200" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <TextBlock Text="Количество:" FontSize="14" Foreground="#3b5998" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="QuantityTextBox" Grid.Row="1" Grid.Column="1" Width="100" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <TextBlock Text="ID документа:" FontSize="14" Foreground="#3b5998" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="DocumentIdTextBox" Grid.Row="2" Grid.Column="1" Width="200" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <TextBlock Text="ID поставщика:" FontSize="14" Foreground="#3b5998" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="SupplierIdTextBox" Grid.Row="3" Grid.Column="1" Width="200" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <TextBlock Text="Стоимость:" FontSize="14" Foreground="#3b5998" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="CostTextBox" Grid.Row="4" Grid.Column="1" Width="120" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <TextBlock Text="Цена:" FontSize="14" Foreground="#3b5998" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Name="PriceTextBox" Grid.Row="5" Grid.Column="1" Width="120" PreviewTextInput="FilterTextBox_PreviewTextInput"/>

                <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button Content="Сохранить" Click="SaveButton_Click" Background="#3b5998" Foreground="White" Width="120" Margin="10"/>
                    <Button Content="Назад" Click="BackButton_Click" Background="#888" Foreground="White" Width="100" Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>