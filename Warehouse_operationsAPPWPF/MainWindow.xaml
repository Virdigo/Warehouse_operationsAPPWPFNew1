<Window x:Class="Warehouse_operationsAPPWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse_operationsAPPWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1250"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
       
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right"  >
            <Button x:Name="logout" Width="40" Height="40"  
                 Click="logout_Click"
                HorizontalAlignment="Right" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/logout.png" Stretch="Fill"/>
            </Button>
            <Button x:Name="BtnMenu1" Width="50" Height="50"  
     Click="BtnMenu_Click"
    HorizontalAlignment="Right" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/Menu.png" Stretch="Fill"/>
            </Button>

            <Button x:Name="BtnMinimize" Width="18" Height="25"  Margin="11"
    Click="BtnMinimize_Click_1"
    HorizontalAlignment="Right" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/line.png" Stretch="Fill"/>
        </Button>

            <Button x:Name="BtnMaximize" Width="20" Height="20" Margin="10"
    Click="BtnMaximize_Click_1"
    HorizontalAlignment="Right" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/min.png" Stretch="Fill"/>
        </Button>

            <Button x:Name="BtnClose" Width="20" Height="20" Margin="10"
    Click="BtnClose_Click_1"
    HorizontalAlignment="Right" Style="{StaticResource BorderlessButton}">
                <Image Source="/Images/close.png" Stretch="Fill"/>
        </Button>
            
        </StackPanel>
    </Grid>
   
</Window>